<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dynamic Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
        integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    {{>navbar data=details}}
    {{>slider slide= slide}}
    {{!-- banner section  --}}
    <section class="banner1_section py-5 mt-5 background1">
        <div class="container text-center">
            <div class="row">
                {{#each banner_1}}
                <div class="col-md-12">
                    <h3>{{this.heading}}</h3>
                    <p class="text-secondary">{{this.description}}</p>
                    <button class="btn btn-outline-primary btn-light">{{this.button}}</button>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    {{!-- banner section end --}}
    {{!-- services section start--}}
    <section id="services-section" class="py-4">
        <div class="container">
            <h1 class="text-center text-secondary">Our Services</h1>
            <div class="row mt-5">
                {{#each services}}
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <div class="container">
                                <i class="{{this.icon}} service-ion"></i>
                            </div>
                            <h3>{{this.title}}</h3>
                            <p>{{this.description}}</p>
                            <a href="{{this.linkText}}">{{this.link}}</a>
                            <a href="#">Support</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    {{!-- service section end --}}
    {{!-- banner 2 section start  --}}
    <section class="banner2_section py-5">
        <div class="container">
            {{#each banner_2}}
            <div class="row">
                <div class="col-md-6 text-center mt-5">
                    <h3>{{this.heading}}</h3>
                    <p>{{this.description}}</p>
                    <button class="btn btn-primary">{{this.button}}</button>
                </div>
                <div class="col-md-6">
                    <img src="{{this.imgUrl}}" style="max-height: 300px;" alt="">
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    {{!-- banner 2 section end  --}}
    {{!-- banner 3 section start  --}}
    <section class="banner3_section py-5">
        <div class="container">
            {{#each banner_3}}
            <div class="row">
                <div class="col-md-6">
                    <img src="{{this.imgUrl}}" style="max-height: 300px;" alt="">
                </div>
                <div class="col-md-6 text-center mt-5">
                    <h3>{{this.heading}}</h3>
                    <p>{{this.description}}</p>
                    <button class="btn btn-primary">{{this.button}}</button>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    {{!-- banner 3 section end  --}}
    {{!-- contact us section start --}}
    <section id="contact_section" class="py-5 background1">
        <div class="container text-secondary" >
            <h3 class="text-center ">Contact Us</h3>
            <div class="row">
                <div class="col-md-12">
                    <form action="/process-contact-form" method="POST">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>
                        <div class="mb-2">
                            <label for="contactNumber" class="form-label">Contact Number</label>
                            <input name="number" type="Number" class="form-control" id="contactNumber">
                        </div>
                        <div class="form-floating mt-3">
                            <textarea name="query" style="height: 250px;" class="form-control" placeholder="Your Query" id="queryField"
                                style="height: 100px"></textarea>
                            <label for="queryField">Message</label>
                        </div>
                        <div class="container text-center py-3">
                            <button type="submit" class="btn btn-dark">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    {{!-- contact us section end --}}
    {{!-- about sectoion start  --}}
    <section id="about_section" class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h3 class="text-secondary">About Us</h3>
                    <p class="text-secondary">Lorem ipsum dolor sit amet consectetur adipisicing elit. Repudiandae, vero. Lorem ipsum dolor sit amet consectetur, adipisicing elit. Saepe ab fugiat alias sunt officia quis eos aperiam ipsum inventore. Commodi facilis non eum dignissimos a natus laudantium neque, exercitationem animi.</p>
                </div>
            </div>
        </div>
    </section>
    {{!-- about section end  --}}
    {{!-- footer section  --}}
    <footer class="footer background1 py-3 ">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <p class="text-secondary">@Made by Sukomal</p>
                </div>
            </div>
        </div>
    </footer>

    {{!-- arrow section  --}}
    <button type="button" class="btn-danger" id="btn-back-to-top">
    <img src="/static/images/arrowup.png"  alt="" class="arrowup">
    </button>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <script>
    // scroll to top button
    //Get the button
    let mybutton = document.getElementById("btn-back-to-top");
    window.onscroll = function () {
    scrollFunction();
    };

    function scrollFunction() {
    if (
    document.body.scrollTop > 20 ||
    document.documentElement.scrollTop > 20
    ) {
    mybutton.style.display = "block";
    } else {
    mybutton.style.display = "none";
    }
    }
    mybutton.addEventListener("click", backToTop);

    function backToTop() {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
    }
    </script>
</body>

</html>